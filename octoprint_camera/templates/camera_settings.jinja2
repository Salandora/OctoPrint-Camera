<h4> Camera </h4>

<div class="control-group" data-toggle="tooltip">
    <label class="control-label">{{ _('Video Capture') }}</label>
    <div class="controls">
        <input type="number" step="1" class="input-mini text-right" data-bind="value: settings.videoCaptureInput" />
    </div>
</div>
<div class="control-group">
    <label class="control-label">{{ _('Resolution') }}</label>
    <div class="controls">
        <label class="checkbox">
            <select data-bind="options: resolutions, optionsValue: 'id', optionsText: resolutionToText, value: selectedSize"></select>
        </label>
    </div>
</div>